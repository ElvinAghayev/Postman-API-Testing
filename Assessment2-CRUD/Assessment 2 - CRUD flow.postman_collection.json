    {
      "name": "Create User",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// Get current timestamp in milliseconds to ensure email uniqueness\r",
              "const timestamp = new Date().getTime();\r",
              "\r",
              "// Generate unique email using timestamp\r",
              "const uniqueEmail = `testuser${timestamp}@example.com`;\r",
              "\r",
              "// Save to collection variable - used in request body\r",
              "pm.collectionVariables.set(\"userEmail\", uniqueEmail);\r",
              "\r",
              "console.log(\"Generated unique email:\", uniqueEmail);"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Verify correct HTTP status code for resource creation\r",
              "pm.test(\"Status code is 201 - Created\", function () {\r",
              "    pm.response.to.have.status(201);\r",
              "});\r",
              "\r",
              "// Ensure API responds within acceptable performance threshold\r",
              "pm.test(\"Response time is below 1000ms\", function () {\r",
              "    pm.expect(pm.response.responseTime).to.be.below(1000);\r",
              "});\r",
              "\r",
              "// Verify id exists, is a number, and is a positive integer\r",
              "pm.test(\"Response contains valid id\", function () {\r",
              "    const jsonData = pm.response.json();\r",
              "    pm.expect(jsonData).to.have.property(\"id\");\r",
              "    pm.expect(jsonData.id).to.be.a(\"number\");\r",
              "    pm.expect(jsonData.id).to.be.above(0);\r",
              "});\r",
              "\r",
              "// Verify the returned email contains @ and has valid format\r",
              "pm.test(\"Returned email is valid format\", function () {\r",
              "    const jsonData = pm.response.json();\r",
              "    pm.expect(jsonData.email).to.match(/^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/);\r",
              "});\r",
              "\r",
              "// Verify all required fields are present in response\r",
              "pm.test(\"Response has all required fields\", function () {\r",
              "    const jsonData = pm.response.json();\r",
              "    pm.expect(jsonData).to.have.all.keys(\"id\", \"name\", \"email\", \"createdAt\");\r",
              "});\r",
              "\r",
              "// Store returned id in collection variable for use in subsequent requests\r",
              "const jsonData = pm.response.json();\r",
              "pm.collectionVariables.set(\"userId\", jsonData.id);\r",
              "console.log(\"User created - ID:\", jsonData.id, \"Email:\", jsonData.email);"
            ],
            "type": "text/javascript",
            "packages": {},
            "requests": {}
          }
        }
      ],
