              "    pm.expect(pm.response.responseTime).to.be.below(1000);\r",
              "});\r",
              "\r",
              "// Verify returned id matches the stored id from POST response\r",
              "// Note: collectionVariables stores as string, convert to Number for strict equality\r",
              "pm.test(\"Returned id matches stored id\", function () {\r",
              "    const jsonData = pm.response.json();\r",
              "    const storedId = pm.collectionVariables.get(\"userId\");\r",
              "    pm.expect(jsonData.id).to.eql(Number(storedId));\r",
              "});\r",
              "\r",
              "// Basic check: verify email contains @ symbol\r",
              "pm.test(\"Email contains @ symbol\", function () {\r",
              "    const jsonData = pm.response.json();\r",
              "    pm.expect(jsonData.email).to.include(\"@\");\r",
              "});\r",
              "\r",
              "// Advanced check: verify email matches valid format using regex\r",
              "pm.test(\"Email format is valid\", function () {\r",
              "    const jsonData = pm.response.json();\r",
              "    pm.expect(jsonData.email).to.match(/^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/);\r",
              "});\r",
              "\r",
              "// Verify all required fields are present in response\r",
              "pm.test(\"Response has all required fields\", function () {\r",
              "    const jsonData = pm.response.json();\r",
              "    pm.expect(jsonData).to.have.all.keys(\"id\", \"name\", \"email\", \"createdAt\");\r",
              "});"
